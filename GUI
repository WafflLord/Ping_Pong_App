//Feel free to add yourself to the list of creators if you modify this

import java.awt.*;

class GUI extends Frame{
    int width;
    int height;
    //This is the basic screen creation object.
    GUI(int width, int height){
        this.width = width;
        this.height = height;
        setSize(width,height);
        drawStringMiddleWidth("The Winner Is:",50,50);
        drawStringMiddleWidth("that Guy steven gearog",100,10);
        setLayout(null);  
        setVisible(true);
    }
    //the main function, but I think you already knew that.
    public static void main(){  
        GUI G=new GUI(1920,1080);
    }
    
    //For Drawing a String, this is SUPER incomplete as of now
    public void drawString(String string, int[] position,int fontSize){
        Label l = new Label(string);
        l.setBounds(position[0],position[1],fontSize*string.length(),fontSize);
        l.setFont(new Font("TimesRoman",Font.PLAIN,fontSize));
        add(l);
    }
    
    public void drawStringMiddleWidth(String string,int height, int fontSize){
        int[] position = {(this.width/2 - (string.length()/2)*fontSize/2),height};
        drawString(string,position,fontSize);
    }
}

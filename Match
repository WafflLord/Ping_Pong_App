public class Match
{

    protected Player[] Players;
        
    int WinningScores = 0;
    int LosingScores = 0;
    
    public Match(Player[] Players)
    {
        this.Players = Players;
    }
    
    public String[] getPlayers(){
        String[] names = new String[Players.length];
        for(int i = 0; i < Players.length; i++){
            names[i] = this.Players[i].returnName();
        }
        return names;
    }
    public static void DefineMatch(Player[] Winners,Player[] Losers){
        for(int i = 0; i < Winners.length; i++){
            Player Winner = Winners[i];
            Winner.addWin();
            Winner.addScores(WinningScores);
            Winner.addHits(WinningScores);
            Winner.addMisses(LosingScores);
            Player Loser = Losers[i];
            Loser.addLoss();
            Loser.addScores(LosingScores);
            Loser.addHits(LosingScores);
            Loser.addMisses(WinningScores);
        }
    }
}

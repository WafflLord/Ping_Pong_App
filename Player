public class Player
{
    int win;
    int loss;
    String name;
    int age;
    int score;
    int hits;
    int misses;
    
    public Player(String name, int age){
        this.win = 0;
        this.loss = 0;
        this.score = 0;
        this.hits = 0;
        this.misses = 0;
        this.name = name;
    }
    
    public String returnName(){
        return this.name;
    }
    
    public int returnWin(){
        return this.win;
    }
    
    public int returnLoss(){
        return this.loss;
    }
    
    public int returnGrade(){
        return this.win/(this.loss + this.win) * 100;
    }
    
    public void addWin(){
        this.win += 1;
    }
    
    public void addLoss(){
        this.loss += 1;
    }
    
    public int returnScores(){
        return this.score;
    }
    
    public void addScores(int scores){
        this.score += scores;
    }
    
    public int returnHits(){
        return this.hits;
    }
        
    public int returnMisses(){
        return this.misses;
    }
    
    public int returnHitsToMiss(){
        return this.hits/(this.misses + this.hits) * 100;
    }
    
    public void addHits(int scores){
        this.hits += scores;
    }
    
    public void addMisses(int scores){
        this.misses += scores;
    }
}

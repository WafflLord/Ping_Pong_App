public class Rankings
{
    Club clubMembers;
    Player[] playerSorted;
    public Rankings(){
        clubMembers = new Club();
        for(int i = 0; i < clubMembers.getClubMembers().length; i++){
            System.out.println(clubMembers.getClubMembers()[i].returnName());
        }
        Player[] ranked = PlayerRankings();
        for(int i = 0; i < ranked.length;i++){
            System.out.println(ranked[i].returnName());
        }
        playerSorted = clubMembers.getClubMembers();
        for(int i = 0; i<playerSorted.length; i++){
            for(int j = 0; j<i;j++){
                Player player = playerSorted[i];
                Player playerComparison = playerSorted[j];
                if(player.returnGrade() > playerComparison.returnGrade()){
                    for(int m = i-1; m >=j; m--){
                        playerSorted[m+1] = playerSorted[m];
                    }
                    playerSorted[j] = playerSorted[i];
                }
            }
        }
    }
    
    public Player[] PlayerRankings(){
        return playerSorted;
    }
    
    public Player getTopPlayer(){
        return playerSorted[0];
    }
    
    public Player[] getTopThreePlayers(){
        Player[] ThreebestPlayers = new Player[3];
        for(int i = 0; i < 3; i++){
            ThreebestPlayers[i] = playerSorted[i];
        }
        return ThreebestPlayers;
    }
    
    public Player getPlayerInRank(int rank){
        return playerSorted[rank];
    }
}
